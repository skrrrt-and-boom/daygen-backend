generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  createdAt    DateTime       @default(now())
  authUserId   String         @unique
  passwordHash String
  displayName  String?
  credits      Int            @default(0)
  profileImage String?
  updatedAt    DateTime       @updatedAt
  role         UserRole       @default(USER)
  gallery      GalleryEntry[]
  templates    Template[]
  usageEvents  UsageEvent[]
}

model Template {
  id          String         @id @default(cuid())
  name        String
  modality    String
  category    String?
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  ownerAuthId String
  gallery     GalleryEntry[]
  owner       User           @relation(fields: [ownerAuthId], references: [authUserId], onDelete: Cascade)

  @@index([ownerAuthId])
}

model GalleryEntry {
  id          String             @id @default(dbgenerated("(gen_random_uuid())::text"))
  ownerAuthId String
  templateId  String?
  assetUrl    String
  metadata    Json?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @default(now()) @updatedAt
  status      GalleryEntryStatus @default(ACTIVE)
  owner       User               @relation(fields: [ownerAuthId], references: [authUserId], onDelete: Cascade)
  template    Template?          @relation(fields: [templateId], references: [id])

  @@index([ownerAuthId, createdAt(sort: Desc)])
}

model UsageEvent {
  id           String      @id @default(dbgenerated("(gen_random_uuid())::text"))
  userAuthId   String
  provider     String
  model        String?
  prompt       String?
  cost         Int
  balanceAfter Int
  status       UsageStatus @default(COMPLETED)
  metadata     Json?
  createdAt    DateTime    @default(now())
  user         User        @relation(fields: [userAuthId], references: [authUserId], onDelete: Cascade)

  @@index([userAuthId, createdAt(sort: Desc)])
}

enum UserRole {
  USER
  ADMIN
}

enum UsageStatus {
  COMPLETED
  GRACE
}

enum GalleryEntryStatus {
  ACTIVE
  REMOVED
}
