generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // pooled: runtime
  directUrl = env("DIRECT_URL")     // direct: migrations
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  authUserId    String         @unique
  email         String         @unique
  passwordHash  String
  displayName   String?
  credits       Int            @default(0)
  profileImage  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  role          UserRole       @default(USER)
  templates     Template[]
  gallery       GalleryEntry[]
  usageEvents   UsageEvent[]
}

model Template {
  id           String         @id @default(cuid())
  name         String
  modality     String
  category     String?
  description  String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  ownerAuthId  String
  owner        User           @relation(fields: [ownerAuthId], references: [authUserId], onDelete: Cascade)
  gallery      GalleryEntry[]
}

model GalleryEntry {
  id           String   @id @default(cuid())
  ownerAuthId  String
  templateId   String?
  assetUrl     String
  metadata     Json?
  status       GalleryEntryStatus @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  owner        User     @relation(fields: [ownerAuthId], references: [authUserId], onDelete: Cascade)
  template     Template? @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@index([ownerAuthId, createdAt(sort: Desc)])
}

model UsageEvent {
  id            String       @id @default(cuid())
  userAuthId    String
  provider      String
  model         String?
  prompt        String?
  cost          Int
  balanceAfter  Int
  status        UsageStatus  @default(COMPLETED)
  metadata      Json?
  createdAt     DateTime     @default(now())

  user          User         @relation(fields: [userAuthId], references: [authUserId], onDelete: Cascade)

  @@index([userAuthId, createdAt(sort: Desc)])
}

enum UserRole {
  USER
  ADMIN
}

enum UsageStatus {
  COMPLETED
  GRACE
}

enum GalleryEntryStatus {
  ACTIVE
  REMOVED
}
