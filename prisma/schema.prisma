model Job {
  id               String            @id @default(cuid())
  userId           String
  type             JobType
  status           JobStatus         @default(PENDING)
  progress         Int               @default(0)
  resultUrl        String?
  error            String?
  metadata         Json?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  completedAt      DateTime?
  user             User              @relation(fields: [userId], references: [authUserId], onDelete: Cascade)
  r2Files          R2File[]
  timelineSegments TimelineSegment[]

  @@index([userId, status])
  @@index([status, createdAt])

  versions JobVersion[]
}

model JobVersion {
  id            String   @id @default(cuid())
  jobId         String
  versionNumber Int
  resultUrl     String
  snapshot      Json?
  createdAt     DateTime @default(now())
  
  job           Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@unique([jobId, versionNumber]) 
}

model Payment {
  id                    String        @id @default(cuid())
  userId                String
  stripeSessionId       String?       @unique
  stripePaymentIntentId String?       @unique
  stripeSubscriptionId  String?       // Store subscription ID for deduplication
  amount                Int
  credits               Int
  status                PaymentStatus @default(PENDING)
  type                  PaymentType
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  user                  User          @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([stripeSessionId])
  @@index([stripePaymentIntentId])
  @@unique([userId, stripeSubscriptionId]) // Prevent duplicate payments per subscription
}

model Subscription {
  id                       String             @id @default(cuid())
  userId                   String             @unique
  stripeSubscriptionId     String             @unique
  stripePriceId            String
  status                   SubscriptionStatus @default(ACTIVE)
  currentPeriodStart       DateTime
  currentPeriodEnd         DateTime
  cancelAtPeriodEnd        Boolean            @default(false)
  credits                  Int
  creditsGranted           Boolean            @default(false)
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  stripeSubscriptionItemId String?            @unique
  user                     User               @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSubscriptionId])
  @@index([stripePriceId])
}




model TimelineSegment {
  id           String   @id @default(cuid())
  jobId        String
  index        Int
  script       String
  visualPrompt String
  audioUrl     String?
  imageUrl     String?
  videoUrl     String?
  predictionId String?
  status       String   @default("pending")
  error        String?
  duration     Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  motionPrompt String?
  alignment    Json?
  config       Json?    // Explicit configuration for segment generation (e.g. source type)
  job          Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, index])
  @@index([predictionId])
  @@index([jobId, status]) // Speed Optimization

  versions      SegmentVersion[]
}

model SegmentVersion {
  id            String   @id @default(uuid())
  segmentId     String
  segment       TimelineSegment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  
  // Snapshot of the segment state
  script        String
  visualPrompt  String
  motionPrompt  String?
  voiceUrl      String?
  imageUrl      String?
  videoUrl      String?
  duration      Float
  changeType    String?  @default("generic")
  createdAt     DateTime @default(now())
  
  @@index([segmentId])
}

enum UserRole {
  USER
  ADMIN
}

enum JobType {
  IMAGE_GENERATION
  VIDEO_GENERATION
  IMAGE_UPSCALE
  BATCH_GENERATION
  SCENE_GENERATION
  IMAGE_EDIT
  IMAGE_RESIZE
  CYRAN_ROLL
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  STITCHING
}

enum UsageStatus {
  COMPLETED
  GRACE
  RESERVED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

enum PaymentType {
  ONE_TIME
  SUBSCRIPTION
  SUBSCRIPTION_UPGRADE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  UNPAID
  INCOMPLETE
  INCOMPLETE_EXPIRED
  TRIALING
  PAUSED
}

enum CreditReason {
  JOB
  PAYMENT
  REFUND
  ADJUSTMENT
  SUBSCRIPTION_CYCLE
}

enum CreditSourceType {
  JOB
  PAYMENT
  SUBSCRIPTION_CYCLE
  SYSTEM
}

// Dual-Wallet Architecture
enum WalletType {
  SUBSCRIPTION
  TOPUP
}

enum TransactionType {
  CREDIT
  DEBIT
  RESET
  REFUND
  EXPIRATION
}

model UserWallet {
  id                     String    @id @default(cuid())
  userId                 String    @unique
  
  // Subscription wallet (resets each billing cycle)
  subscriptionCredits    Int       @default(0)
  subscriptionExpiresAt  DateTime?
  
  // Top-up wallet (perpetual - never expires)
  topUpCredits           Int       @default(0)
  
  // Grace limit for overdraft (Fix 10: tracks available grace)
  graceLimit             Int       @default(50)
  // Fix 10: Track cumulative grace usage for abuse prevention
  graceUsed              Int       @default(0)
  
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  
  user                   User      @relation(fields: [userId], references: [authUserId], onDelete: Cascade)
  
  @@index([userId])
}

model WalletTransaction {
  id              String          @id @default(cuid())
  userId          String
  walletType      WalletType
  transactionType TransactionType
  amount          Int
  balanceBefore   Int
  balanceAfter    Int
  
  // Audit fields
  sourceType      String?         // PAYMENT | JOB | SUBSCRIPTION_CYCLE | SYSTEM
  sourceId        String?         // paymentId, jobId, subscriptionId
  description     String?
  metadata        Json?
  
  createdAt       DateTime        @default(now())
  
  @@index([userId, createdAt(sort: Desc)])
  @@index([sourceType, sourceId])
}

// Avatar and Product models for user content
model Avatar {
  id            String        @id @default(cuid())
  userId        String
  name          String
  slug          String
  imageUrl      String        // Primary image URL
  source        String        // "upload" | "gallery"
  sourceId      String?
  published     Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime?
  
  owner         User          @relation(fields: [userId], references: [authUserId], onDelete: Cascade)
  images        R2File[]      // Replaces AvatarImage[]
  
  @@unique([userId, slug])
  @@index([userId, deletedAt])
}

