model Product {
  id            String         @id @default(cuid())
  userId        String
  name          String
  slug          String
  imageUrl      String
  source        String
  sourceId      String?
  published     Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?
  
  owner         User           @relation(fields: [userId], references: [authUserId], onDelete: Cascade)
  images        R2File[]       // Replaces ProductImage[]
  
  @@unique([userId, slug])
  @@index([userId, deletedAt])
}

