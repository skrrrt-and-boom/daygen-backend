generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  authUserId       String        @id
  id               String?       @unique @default(cuid())
  email            String        @unique
  username         String?       @unique // URL-friendly identifier (e.g., "john-doe")
  createdAt        DateTime      @default(now())
  displayName      String?
  credits          Int           @default(20)  // Legacy - kept for backward compatibility
  profileImage     String?
  bio              String?
  updatedAt        DateTime      @updatedAt
  role             UserRole      @default(USER)
  stripeCustomerId String?       @unique
  jobs             Job[]
  payments         Payment[]
  r2Files          R2File[]
  subscription     Subscription?
  usageEvents      UsageEvent[]
  voices           Voice[]
  avatars          Avatar[]
  wallet           UserWallet?   // Dual-wallet architecture

  products         Product[]
  userMusic        UserMusic[]
}

model UserMusic {
  id        String   @id @default(cuid())
  userId    String
  name      String
  url       String
  genre     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId])
}


model Voice {
  id           String   @id @default(cuid())
  name         String
  description  String?
  elevenLabsId String   @unique
  previewUrl   String?
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId])
}

model UsageEvent {
  id           String      @id @default(dbgenerated("(gen_random_uuid())::text"))
  userId       String
  provider     String
  model        String?
  prompt       String?
  cost         Int
  balanceAfter Int
  status       UsageStatus @default(COMPLETED)
  metadata     Json?
  createdAt    DateTime    @default(now())
  user         User        @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
}

model R2File {
  id            String    @id @default(cuid())
  userId        String
  fileName      String
  fileUrl       String
  fileSize      Int?
  mimeType      String?
  prompt        String?
  model         String?
  aspectRatio   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // New fields for consolidation
  isPrimary     Boolean   @default(false)
  likedByAuthIds String[]
  likeCount     Int       @default(0)

  // Source info (migrated from AvatarImage/ProductImage)
  source        String?
  sourceId      String?

  // Relations
  avatarId      String?
  avatarImageId String?   // Note: Might be redundant now if this IS the image, but keeping for safety if it referred to something else. 
                        // Actually, looking at original schema, `AvatarImage` had `avatarId`. 
                        // `R2File` had `avatarId` and `avatarImageId`. 
                        // If `R2File` REPLACES `AvatarImage`, then R2File SHOULD have `avatarId`.
  
  deletedAt     DateTime?
  jobId         String?
  productId     String?
  
  // Replaces the `Like` table logic
  isLiked       Boolean   @default(false) // Keeping this as a personalized flag if needed, or legacy.
  isPublic      Boolean   @default(false)
  references    String[]  @default([])  // URLs of reference images used during generation (max 16)
  
  job           Job?      @relation(fields: [jobId], references: [id])
  owner         User      @relation(fields: [userId], references: [authUserId], onDelete: Cascade)
  
  // Relations to Avatar/Product are simpler now since R2File acts as the image
  avatar        Avatar?   @relation(fields: [avatarId], references: [id])
  product       Product?  @relation(fields: [productId], references: [id])

  @@index([userId, createdAt(sort: Desc)])
  @@index([userId, deletedAt])
  @@index([jobId])
  @@index([avatarId])
  @@index([productId])
  
  // Removed Like[] relation
}

