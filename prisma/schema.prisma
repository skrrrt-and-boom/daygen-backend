generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String        @id
  email            String        @unique
  createdAt        DateTime      @default(now())
  authUserId       String        @unique
  displayName      String?
  credits          Int           @default(20)
  profileImage     String?
  updatedAt        DateTime      @updatedAt
  role             UserRole      @default(USER)
  stripeCustomerId String?       @unique
  jobs             Job[]
  payments         Payment[]
  r2Files          R2File[]
  subscription     Subscription?
  usageEvents      UsageEvent[]
  voices           Voice[]
}

model Voice {
  id           String   @id @default(cuid())
  name         String
  description  String?
  elevenLabsId String   @unique
  previewUrl   String?
  ownerAuthId  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [ownerAuthId], references: [authUserId], onDelete: Cascade)

  @@index([ownerAuthId])
}

model UsageEvent {
  id           String      @id @default(dbgenerated("(gen_random_uuid())::text"))
  userAuthId   String
  provider     String
  model        String?
  prompt       String?
  cost         Int
  balanceAfter Int
  status       UsageStatus @default(COMPLETED)
  metadata     Json?
  createdAt    DateTime    @default(now())
  user         User        @relation(fields: [userAuthId], references: [authUserId], onDelete: Cascade)

  @@index([userAuthId, createdAt(sort: Desc)])
}

model R2File {
  id            String    @id @default(cuid())
  ownerAuthId   String
  fileName      String
  fileUrl       String
  fileSize      Int?
  mimeType      String?
  prompt        String?
  model         String?
  aspectRatio   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  avatarId      String?
  avatarImageId String?
  deletedAt     DateTime?
  jobId         String?
  productId     String?
  isLiked       Boolean   @default(false)
  isPublic      Boolean   @default(false)
  job           Job?      @relation(fields: [jobId], references: [id])
  owner         User      @relation(fields: [ownerAuthId], references: [authUserId], onDelete: Cascade)

  @@index([ownerAuthId, createdAt(sort: Desc)])
  @@index([ownerAuthId, deletedAt])
  @@index([jobId])
}

model Job {
  id               String            @id @default(cuid())
  userId           String
  type             JobType
  status           JobStatus         @default(PENDING)
  progress         Int               @default(0)
  resultUrl        String?
  error            String?
  metadata         Json?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  completedAt      DateTime?
  user             User              @relation(fields: [userId], references: [authUserId], onDelete: Cascade)
  r2Files          R2File[]
  timelineSegments TimelineSegment[]

  @@index([userId, status])
  @@index([status, createdAt])

  versions JobVersion[]
}

model JobVersion {
  id            String   @id @default(cuid())
  jobId         String
  versionNumber Int
  resultUrl     String
  snapshot      Json?
  createdAt     DateTime @default(now())
  
  job           Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@unique([jobId, versionNumber]) 
}

model Payment {
  id                    String        @id @default(cuid())
  userId                String
  stripeSessionId       String?       @unique
  stripePaymentIntentId String?       @unique
  amount                Int
  credits               Int
  status                PaymentStatus @default(PENDING)
  type                  PaymentType
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  user                  User          @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([stripeSessionId])
  @@index([stripePaymentIntentId])
}

model Subscription {
  id                       String             @id @default(cuid())
  userId                   String             @unique
  stripeSubscriptionId     String             @unique
  stripePriceId            String
  status                   SubscriptionStatus @default(ACTIVE)
  currentPeriodStart       DateTime
  currentPeriodEnd         DateTime
  cancelAtPeriodEnd        Boolean            @default(false)
  credits                  Int
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  stripeSubscriptionItemId String?            @unique
  user                     User               @relation(fields: [userId], references: [authUserId], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSubscriptionId])
  @@index([stripePriceId])
}

model WebhookEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique
  type      String
  createdAt DateTime @default(now())
}

model TimelineSegment {
  id           String   @id @default(cuid())
  jobId        String
  index        Int
  script       String
  visualPrompt String
  audioUrl     String?
  imageUrl     String?
  videoUrl     String?
  predictionId String?
  status       String   @default("pending")
  error        String?
  duration     Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  motionPrompt String?
  alignment    Json?
  job          Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, index])
  @@index([predictionId])

  versions      SegmentVersion[]
}

model SegmentVersion {
  id            String   @id @default(uuid())
  segmentId     String
  segment       TimelineSegment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  
  // Snapshot of the segment state
  script        String
  visualPrompt  String
  motionPrompt  String?
  voiceUrl      String?
  imageUrl      String?
  videoUrl      String?
  duration      Float
  changeType    String?  @default("generic")
  createdAt     DateTime @default(now())
  
  @@index([segmentId])
}

enum UserRole {
  USER
  ADMIN
}

enum JobType {
  IMAGE_GENERATION
  VIDEO_GENERATION
  IMAGE_UPSCALE
  BATCH_GENERATION
  SCENE_GENERATION
  IMAGE_EDIT
  IMAGE_RESIZE
  CYRAN_ROLL
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  STITCHING
}

enum UsageStatus {
  COMPLETED
  GRACE
  RESERVED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

enum PaymentType {
  ONE_TIME
  SUBSCRIPTION
  SUBSCRIPTION_UPGRADE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  UNPAID
  INCOMPLETE
  INCOMPLETE_EXPIRED
  TRIALING
  PAUSED
}

enum CreditReason {
  JOB
  PAYMENT
  REFUND
  ADJUSTMENT
  SUBSCRIPTION_CYCLE
}

enum CreditSourceType {
  JOB
  PAYMENT
  SUBSCRIPTION_CYCLE
  SYSTEM
}
